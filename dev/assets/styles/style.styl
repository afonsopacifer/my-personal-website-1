@charset "UTF-8"

// base
// -----------------------------------------
@import "base/normalize"
@import "base/flex-grid-framework"

// configs
// -----------------------------------------
cor-principal = #c80280

// layout
// -----------------------------------------
@import "layout/header"
@import "layout/banner"
@import "layout/footer"
@import "layout/form"

// global
// -----------------------------------------
body
	background #e3e2e2
	font-family: 'PT Sans', sans-serif;

.row
	@extend $row

// div, section, article, footer, nav, header, main
// 	border 1px dashed #4ecb29

// index
// -----------------------------------------
.content
	@extend $col-10
	@extend $offset-1
	text-align center
	padding 60px 0
	@media screen and (max-width 1060px)
		mq-col(12)
		mq-offset(0)

.titulo
	font-size 22px
	color cor-principal

.linha
	@extend $col-10
	@extend $offset-1
	height 1px
	background cor-principal

.imagem-post-it
	@extend $col-3
	@extend $offset-1
	margin-top 40px
	@media screen and (max-width 1060px)
		mq-col(4)
		mq-offset(0)
	@media screen and (max-width 670px)
		mq-col(5)
	@media screen and (max-width 580px)
		mq-col(12)
		text-align center

.imagem-post-it img
	width 100%
	max-width 246px

.content-2
	@extend $col-7
	padding 60px 0
	@media screen and (max-width 1060px)
		mq-col(8)
	@media screen and (max-width 670px)
		mq-col(7)
	@media screen and (max-width 580px)
		mq-col(12)
		text-align center

.link-frase
	color cor-principal

.link-frase:hover
	opacity .7
